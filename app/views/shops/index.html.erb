    <div class="single-product-area">
    <div class="zigzag-bottom"></div>
    
    <div class="container">
    <% @products.each do |f|%>
    <div class="col-md-3 col-sm-6">
        
                    <div class="single-shop-product">
                        <div class="product-upper">
                            <%=link_to image_tag(f.avatar_file_name),single_product_shops_path(product_id: f.id)%>
                        </div>
                        <h2><%=link_to(f.name,single_product_shops_path(:product_id =>f.id))%></h2>
                        <div class="product-carousel-price">
                            <ins>$<%=f.price%></ins> <del>$<%=(f.price) +220%></del>
                        </div>  
                        
                        <div class="product-option-shop">
                            <%if user_signed_in?%>
                        <div class="product-option-shop">
                            <%= link_to "Add to Cart",ajax_add_shops_path(:product_id => f.id),data: { confirm: 'Are you sure? Product will automatically added to cart' },class: "add_to_cart_button", :remote => true  %>
                             
                        </div>  <br>
                        <% if current_user.wishlists.pluck(:product_id).include?f.id%>
                            <h2> Already added to wishlist</h2>
                            <%else%>
                            <%= link_to "Add to Wishlist",ajax_wish_shops_path(:product_id => f.id),class: "add_to_cart_button", :remote => true  %>
                            <%end%>
                            <%else%>
                            <%= link_to "Add to Cart",new_user_session_path  %>
                            <%end%>
                                      
                        </div>  
                                            
                    </div>
                    
                </div>
                <%end%> 
